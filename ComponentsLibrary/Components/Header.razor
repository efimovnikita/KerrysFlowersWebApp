<header class="bg-menu">
    <div class="max-w-7xl flex flex-col p-1 lg:p-4 items-center lg:m-auto lg:flex-row lg:items-center lg:space-y-0 lg:justify-between">
        <Logo/>
        <nav class="font-montserrat text-menutext text-xl">
            <ul class="flex flex-col items-center space-y-[2px] lg:flex-row lg:space-x-5 lg:space-y-0 lg:space-x-10">
                <NavLink href="catalog" Match="NavLinkMatch.All">
                    <li class="p-3 hover:bg-text1 hover:rounded-md">
                        Каталог
                    </li>
                </NavLink>
                <NavLink href="favourites">
                    <li class="p-3 hover:bg-text1 hover:rounded-md">
                        Избранное
                    </li>
                </NavLink>
                <NavLink href="cart#cart-container">
                    <li class="p-3 hover:bg-text1 hover:rounded-md relative">
                        <div>
                            Корзина
                        </div>
                        @if (AppState.ShoppingCart.Count > 0)
                        {
                            <div class="absolute w-6 h-6 flex justify-center items-center rounded-full top-0 -right-2 text-xs border border-menutext">
                                @AppState.ShoppingCart.Count
                            </div>   
                        }
                    </li>
                </NavLink>
                <NavLink href="contacts">
                    <li class="p-3 hover:bg-text1 hover:rounded-md">
                        Контакты
                    </li>
                </NavLink>
            </ul>
        </nav>
    </div>
</header>

@code
{
    [CascadingParameter] public CascadingAppState AppState { get; set; }
}